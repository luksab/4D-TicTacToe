import java.awt.*;
import javax.swing.*;
import java.awt.event.*;

public class MyFileChooserPanel extends JPanel
{ 
    MyTextField nameTF; 
    MyButton chooseButton;
    Container cp;
    
    public MyFileChooserPanel(String title,Color farbe) 
    {
        this.setLayout(null);
        this.setBackground(farbe);
        this.setBorder(javax.swing.BorderFactory.createTitledBorder(title));
                 
        chooseButton = new MyButton(1,"choose");
        this.add(chooseButton);
        
        nameTF = new MyTextField();
        nameTF.setLocation(20,20);
        nameTF.setSize(200,25);
        this.add(nameTF); 
    } 
    
    
    
} 
   